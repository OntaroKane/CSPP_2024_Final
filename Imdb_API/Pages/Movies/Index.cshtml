@model Imdb_API.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title_basic[0].titletype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title_basic[0].primarytitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.title_basic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titletype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primarytitle)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.tconst">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.tconst">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.tconst">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
